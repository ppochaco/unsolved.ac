{
  "manifest_version": 3,
  "name": "unsolved ac",
  "version": "1.0.0",
  "description": "unsolved 백준 문제 찾기",
  "permissions": ["storage"],
  "host_permissions": ["https://solved.ac/problems*"],
  "background": {
    "service_worker": "src/services/chrome/background-script.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://solved.ac/problems*"],
      "js": ["src/services/chrome/content-script.ts"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Solved.ac Extension"
  },
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/*"],
      "matches": ["https://solved.ac/*"]
    }
  ]
}
